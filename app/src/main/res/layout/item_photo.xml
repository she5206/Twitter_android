<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/it_photo">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivProfilePhoto"
        android:adjustViewBounds="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/circle"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="user name"
        android:id="@+id/tvUserName"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ivProfilePhoto"
        android:layout_alignParentTop="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="time"
        android:id="@+id/tvTimestamp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivPhoto"
        android:adjustViewBounds="true"
        android:background="@drawable/placeholder"
        android:layout_below="@+id/ivProfilePhoto"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/ivFavorite"
        android:adjustViewBounds="true"
        android:src="@drawable/favorite"
        android:layout_below="@+id/ivPhoto"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="999"
        android:gravity="center_vertical"
        android:id="@+id/tvLikeCount"
        android:textSize="20sp"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ivFavorite"
        android:layout_below="@+id/ivPhoto"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="caption is here"
        android:id="@+id/tvCaption"
        android:textSize="20sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_below="@+id/ivFavorite"
        android:layout_alignParentStart="true" />


</RelativeLayout>